// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  conversationIds String[]       @db.ObjectId
  conversations   Conversation[] @relation(fields: [conversationIds], references: [id])

  seenMessageIds String[]  @db.ObjectId
  seenMessages   Message[] @relation("Seen", fields: [seenMessageIds], references: [id])

  accounts      Account[]
  messages      Message[]
  potentialDate PotentialDate[]
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Think of this as the group. It is seperate from
// the event details such that you can createa new event within 
// the same group chat and not have to restart a conversation entirely
model Conversation {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  lastMessageAt DateTime @default(now())
  name          String?
  isGroup       Boolean?

  messagesIds String[]  @db.ObjectId
  messages    Message[]

  // eventDetails EventDetails?
  eventDetailsId String? @db.ObjectId
  eventDetails   EventDetails? 

  userIds String[] @db.ObjectId
  users   User[]   @relation(fields: [userIds], references: [id])

}

model EventDetails {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  potentialDates PotentialDate[]
  chosenDate     DateTime?
  description   String?
  location       String? // update location to be a geolocation

  conversationId String         @unique @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  // conversation   Conversation?  @relation(fields: [conversationId], references: [id])
}

model PotentialDate {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  date DateTime

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  eventDetailsId String       @db.ObjectId
  eventDetails   EventDetails @relation(fields: [eventDetailsId], references: [id])
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  body      String?
  image     String?
  createdAt DateTime @default(now())

  seenIds String[] @db.ObjectId
  seen    User[]   @relation("Seen", fields: [seenIds], references: [id])

  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId String @db.ObjectId
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)
}
